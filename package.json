{
  "name": "ott-cms-frontend",
  "version": "1.0.0",
  "description": "A customizable OTT content management and frontend platform built with Payload CMS, Next.js, TailwindCSS, and shadcn/ui â€” includes admin tools, video catalog management, user authentication, and more.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "ensure-logs-dir": "node scripts/ensure-logs-dir.js",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation npm run ensure-logs-dir && next dev --turbopack",
    "dev:logs": "cross-env NODE_OPTIONS=--no-deprecation ENABLE_FILE_LOGGING=true npm run ensure-logs-dir && next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation npm run ensure-logs-dir && next start",
    "webhooks": "node scripts/webhook-forward.js",
    "test:webhook": "node scripts/test-mux-webhook.js",
    "test:webhook:created": "node scripts/test-mux-webhook.js created",
    "test:webhook:ready": "node scripts/test-mux-webhook.js ready",
    "test:webhook:test": "node scripts/test-mux-webhook.js test",
    "test:webhook:safe": "node scripts/test-mux-webhook.js created --test-first",
    "init:collections": "node scripts/init-collections.js",
    "check:collections": "node scripts/check-collections.js",
    "test:events": "node scripts/test-events.js"
  },
  "dependencies": {
    "@mux/mux-node": "^11.0.1",
    "@mux/mux-uploader": "^1.2.0",
    "@mux/mux-uploader-react": "^1.2.0",
    "@mux/mux-video-react": "^0.25.1",
    "@payloadcms/admin-bar": "3.34.0",
    "@payloadcms/db-mongodb": "3.34.0",
    "@payloadcms/live-preview-react": "3.34.0",
    "@payloadcms/next": "3.34.0",
    "@payloadcms/payload-cloud": "3.34.0",
    "@payloadcms/plugin-form-builder": "3.34.0",
    "@payloadcms/plugin-nested-docs": "3.34.0",
    "@payloadcms/plugin-redirects": "3.34.0",
    "@payloadcms/plugin-search": "3.34.0",
    "@payloadcms/plugin-seo": "3.34.0",
    "@payloadcms/richtext-lexical": "3.34.0",
    "@payloadcms/ui": "3.34.0",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.10",
    "@radix-ui/react-dropdown-menu": "^2.1.11",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.8",
    "@radix-ui/react-toast": "^1.2.7",
    "@types/jsonwebtoken": "^9.0.9",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "hls-parser": "^0.13.5",
    "hls.js": "^1.0.3-0.canary.7275",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.378.0",
    "mongoose": "^8.13.2",
    "next": "15.2.3",
    "next-sitemap": "^4.2.3",
    "payload": "3.34.0",
    "prism-react-renderer": "^2.3.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.45.4",
    "recharts": "^2.15.2",
    "sharp": "0.32.6",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/typography": "^0.5.13",
    "@types/escape-html": "^1.0.2",
    "@types/node": "22.5.4",
    "@types/react": "19.0.12",
    "@types/react-dom": "19.0.4",
    "autoprefixer": "^10.4.19",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.2.3",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "smee-client": "^3.1.1",
    "tailwindcss": "^3.4.3",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
